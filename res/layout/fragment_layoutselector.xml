<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">


    <Button
        android:id="@+id/onePerCollumnButton"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginRight="30dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/twoPerCollumnButton" />

    <Button
        android:id="@+id/twoPerCollumnButton"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/numbItemsLabel"
        app:layout_constraintStart_toStartOf="@id/numbItemsLabel"
        app:layout_constraintTop_toBottomOf="@id/numbItemsLabel" />

    <Button
        android:id="@+id/threePerCollumnButton"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="30dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/twoPerCollumnButton" />

    <TextView
        android:id="@+id/numbItemsLabel"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:text="Number of Items Per Collumn"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="@id/onePerCollumnButton"
        app:layout_constraintRight_toRightOf="@id/threePerCollumnButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/scrollSelectorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_forward_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>